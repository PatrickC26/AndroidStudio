<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addNew">

    <TextView
        android:id="@+id/L_bookName_Show"
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="書名："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/L_price_Show"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:text="書價："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L_bookName_Show" />

    <TextView
        android:id="@+id/L_person_Show"
        android:layout_width="67dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:text="訂購人："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L_price_Show" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="67dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:text="已結帳："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L_person_Show" />

    <Button
        android:id="@+id/B_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="161dp"
        android:text="ADD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/C_hasCheckout" />

    <CheckBox
        android:id="@+id/C_hasCheckout"
        android:layout_width="212dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="是"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/T_orderPerson" />

    <EditText
        android:id="@+id/T_bookName"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/L_bookName_Show"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/T_bookPrice"
        android:layout_width="218dp"
        android:layout_height="54dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/L_price_Show"
        app:layout_constraintTop_toBottomOf="@+id/T_bookName" />

    <EditText
        android:id="@+id/T_orderPerson"
        android:layout_width="221dp"
        android:layout_height="53dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/L_person_Show"
        app:layout_constraintTop_toBottomOf="@+id/T_bookPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>